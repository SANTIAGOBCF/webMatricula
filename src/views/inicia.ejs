<% include partials/_header %>
<form action="/add" method="POST">
    <div class="container mt-5 mb-5">
        <% if(nombre){ %>
            Codigo:  <input type="text" name="cod"/>
        <% } %>
    </div>

    <div class="container mt-5 col-11">
        <table class="table ">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Curso</th>
                <th scope="col">Grupo-Profesor</th>
                
            </tr>
            </thead>
            
            <tbody>
                <% if (data) { %>
                    <% for(var i = 0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><label name="nombres" value=<%= data[i].nombreCurso %> ><%= data[i].nombreCurso %></label></td>
                            <td>
                                <select  name="datos" class="form-select" aria-label="Default select example">
                                    <option selected>Seleccione</option>
                                    <option value="G1-Gamarra">G1-Gamarra</option>
                                    <option value="G2-Herrera">G2-Herrera</option>
                                    <option value="G3-Lopez">G3-Lopez</option>
                                </select>
                            </td>
                            
                        </tr>
                    <% } %>
                <% } %>

            </tbody>
        </table>
    </div>
    
    <button type="submit" class="btn btn-primary ml-5 mt-5"> Enviar datos</button>
    
</form>
<% include partials/_footer %>
